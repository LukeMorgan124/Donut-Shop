@page
@model Donut_Shop.Pages.Stocks.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Stock</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="stock.StockID" />
            <div class="form-group">
                <label asp-for="stock.ProductID" class="control-label"></label>
                <select asp-for="stock.ProductID" class="form-control" asp-items="ViewBag.ProductID"></select>
                <span asp-validation-for="stock.ProductID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="stock.StoreID" class="control-label"></label>
                <select asp-for="stock.StoreID" class="form-control" asp-items="ViewBag.StoreID"></select>
                <span asp-validation-for="stock.StoreID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="stock.StockLevel" class="control-label"></label>
                <input asp-for="stock.StockLevel" class="form-control" />
                <span asp-validation-for="stock.StockLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
