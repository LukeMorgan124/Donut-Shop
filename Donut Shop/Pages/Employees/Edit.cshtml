@page
@model Donut_Shop.Pages.Employees.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Employee.EmployeeID" />
            <div class="form-group">
                <label asp-for="Employee.FirstName" class="control-label">First Name</label>
                <input asp-for="Employee.FirstName" class="form-control" />
                <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.LastName" class="control-label">Last Name</label>
                <input asp-for="Employee.LastName" class="form-control" />
                <span asp-validation-for="Employee.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.EmployeeType" class="control-label">Employee Type</label>
                <input asp-for="Employee.EmployeeType" class="form-control" />
                <span asp-validation-for="Employee.EmployeeType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.StoreID" class="control-label">Workplace</label>
                <input asp-for="Employee.StoreID" class="form-control" />
                <span asp-validation-for="Employee.StoreID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.DateBirth" class="control-label">Date of Birth</label>
                <input asp-for="Employee.DateBirth" class="form-control" />
                <span asp-validation-for="Employee.DateBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
