@page
@model Donut_Shop.Pages.Stores.StockModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Store</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Store.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Store.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Store.Stocks)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Product</th>
                    <th>Stock Level</th>
                </tr>
                @foreach (var item in Model.Store.Stocks)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Products.ProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StockLevel)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Store.StoreID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
