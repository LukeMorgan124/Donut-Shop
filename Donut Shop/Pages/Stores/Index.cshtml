@page
@model Donut_Shop.Pages.Stores.IndexModel

@{
    ViewData["Title"] = "Stores";
}

<h1>Stores</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Store[0].Location)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Store) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>    
            <td>
                <a asp-page="./Edit" asp-route-id="@item.StoreID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.StoreID">Employees</a> |
                <a asp-page="./Stock" asp-route-id="@item.StoreID">Stock</a> |
                <a asp-page="./Delete" asp-route-id="@item.StoreID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
