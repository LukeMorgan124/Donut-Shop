@model Donut_Shop.Pages.Stores.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Store</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Store.Location" class="control-label"></label>
                <input asp-for="Store.Location" class="form-control" />
                <span asp-validation-for="Store.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Store.ProductID" class="control-label"></label>
                <input asp-for="Store.ProductID" class="form-control" />
                <span asp-validation-for="Store.ProductID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Store.EmployeeID" class="control-label"></label>
                <select asp-for="Store.EmployeeID" class ="form-control" asp-items="ViewBag.EmployeeID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

